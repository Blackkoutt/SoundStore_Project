@page
@model Projekt_.NET.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="empty-delete"></div>
<div class="top-cart">
    <h2>Kategorie</h2>
    <div class="back_to_list">
        <a asp-page="./Create">Dodaj</a>
    </div>
    <br /><br />
</div>
<div class="empty"></div>
<br />
<div class=table-list>
    <table class="table table-dark table-bordered border-secondary table-stripped table-hover ">
        <thead>
            <tr>
                <th class="column" scope="col">@Html.DisplayNameFor(model => model.Category[0].Name)</th>
                <th class="column" scope="col">Akcja</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Category)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a class = "remove" asp-page="./Delete" asp-route-id="@item.Id">Kasuj</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
